<div class="container">
  <div class="mt-5 mb-3 fs-2 fw-semibold">
    <div class="container d-flex fs-6 fw-light justify-content-between">
            <div class="" style="min-width: 180px;">Product</div>
            <div class="flex-grow-1" style="min-width: 180px;">Name</div>
            <div class="text-end" style="min-width: 180px;">Quantity</div>
            <div class="text-end" style="min-width: 180px;">Price</div>
            <div class="text-end" style="min-width: 180px;">Total</div>
            <div class="text-center" style="min-width: 180px;">Remove</div>
    </div>
    <div class="container d-flex flex-column">
    {{#each cart}}
        <div class="d-flex fw-light justify-content-between align-items-center fs-5 mb-3">
            <div class="pt-2 pb-2" style="min-width: 180px;">
            <div class="aspect-1x1" style="max-width: 119px;">
            <img src="{{this.photoURL}}" alt="" class="img-fluid"/>
            </div></div>
            <div class="flex-grow-1" style="min-width: 180px;">{{this.name}}</div>
            <div class="text-end" style="max-width: 120px;">
                <div class="input-group input-group-sm flex-nowrap">
                    <span class="input-group-text">
                    <button data-id="m{{this.id}}" type="qty" class="btn" style="max-width:6px">-</button></span>
                    <input id="{{this.id}}" type="text" class="form-control" value="{{this.quantity}}"/>
                    <span class="input-group-text">
                    <button data-id="p{{this.id}}" type="qty" class="btn" style="max-width:6px">+</button></span>
                </div>
                </div>
            <div class="text-end" style="min-width: 180px;">{{this.price}}</div>
            <div class="text-end" style="min-width: 180px;">{{this.total}}</div>
            <div class="remove-btn d-flex justify-content-center" style="min-width: 180px;">
                <button type="remove-cart" data-id="{{this.id}}" class="btn"><div class="" style="min-width:45px;">
                    <img src="/icons8-remove-50.png" class="mx-auto" style="width: 1.47em;"/>
                </div></button>
            </div>
        </div>
    {{/each}}
    </div>
    <div class="container d-flex align-items-center fs-5">
        <div class="ms-auto me-auto d-flex justify-content-center">
            <button class="btn btn-primary">Checkout</button>
            </div>
        <div class="fw-medium" style="min-width:
        180px;">Total : {{cartTotal}}</div>
    </div>
  </div>
</div>